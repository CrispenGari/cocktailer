{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "plugins": [
      {
        "name": "@0no-co/graphqlsp",
        "schema": "https://cocktailer.onrender.com/graphql",
        "tadaOutputLocation": "./graphql-env.d.ts"
      }
    ],
    "paths": {
      "@/*": ["./*"]
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    ".expo/types/**/*.ts",
    "expo-env.d.ts",
    "graphql-env.d.ts"
  ],
  "noEmit": true,
  "jsx": "react-jsx",
  "target": "es2016",
  "moduleResolution": "node",
  "esModuleInterop": true,
  "forceConsistentCasingInFileNames": true,
  "skipLibCheck": true,
  "strict": true
}
